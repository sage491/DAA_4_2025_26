#include<iostream>
using namespace std;

struct node{
    int node_data;
    node* next;
};

void insert_at_end(node** head , int new_data){
    node* newnode = new node();
    newnode->node_data = new_data;
    newnode->next = nullptr;

    if(*head == nullptr){
        *head = newnode;
        return;
    }
    node* temp = *head;
    while(temp->next != nullptr){
        temp = temp->next;
    }
    temp->next = newnode;
}

void display_list(node* head){
    node* temp = head;
    while(temp != nullptr){
        cout << temp->node_data << " -> ";
        temp = temp->next;
    }
    cout << "nullptr" << endl;
}

void delete_at_end(node** head){
    if(*head == nullptr){
        cout << "List empty" << endl;
        return;
    }
    if((*head)->next == nullptr){
        delete *head;
        *head = nullptr;
        return;
    }
    node* temp = *head;
    while(temp->next->next != nullptr){
        temp = temp->next;
    }
    delete temp->next;
    temp->next = nullptr;
}

void delete_at_beginning(node** head){
    if(*head == nullptr){
        cout << "List empty" << endl;
        return;
    }
    node* temp = *head;
    *head = (*head)->next;
    delete temp;
}

void delete_at_position(node** head, int position){
    if(*head == nullptr){
        cout << "List empty" << endl;
        return;
    }
    if(position == 0){
        delete_at_beginning(head);
        return;
    }
    node* temp = *head;
    for(int i = 0; temp != nullptr && i < position-1; i++){
        temp = temp->next;
    }
    if(temp == nullptr || temp->next == nullptr){
        cout << "Position out of bounds" << endl;
        return;
    }
    node* del = temp->next;
    temp->next = del->next;
    delete del;
}
void delete_value(node** head, int value){
    if(*head == nullptr){
        cout << "List empty" << endl;
        return;
    }
    node* temp = *head;
    node* prev = nullptr;

    while(temp != nullptr && temp->node_data != value){
        prev = temp;
        temp = temp->next;
    }
    if(temp == nullptr){
        cout << "Value not found" << endl;
        return;
    }
    if(prev == nullptr){
        *head = temp->next;
    } else {
        prev->next = temp->next;
    }
    delete temp;
}

int main(){
    node* head = nullptr;
    int choice, value, pos;

    while(true){
        cout << "\n1. Insert at end";
        cout << "\n2. Delete at end";
        cout << "\n3. Delete at beginning";
        cout << "\n4. Delete at position";
        cout << "\n5. Delete by value";
        cout << "\n6. Display list";
        cout << "\n7. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch(choice){
            case 1:
                cout << "Enter value: ";
                cin >> value;
                insert_at_end(&head, value);
                break;

            case 2:
                delete_at_end(&head);
                break;

            case 3:
                delete_at_beginning(&head);
                break;

            case 4:
                cout << "Enter position (0-based): ";
                cin >> pos;
                delete_at_position(&head, pos);
                break;

            case 5:
                display_list(head);
                break;

            case 6:
                return 0;

            default:
                cout << "Invalid choice" << endl;
        }
    }
}
